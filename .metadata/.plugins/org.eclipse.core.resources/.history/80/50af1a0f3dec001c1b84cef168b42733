package org.generation.utils;
import java.util.Scanner;

class Class {

    public static void main( String[] args )
    {
        Scanner console = new Scanner( System.in );
        System.out.println( "ingresa tu nombre:  " );
        String name = console.next();
        
        System.out.println( "ingresa tu apellido:  " );
        String lastName = console.next();
        printNameCharacters( name, lastName );
        printNameLength( name, lastName );
        printNameCharacters(name, lastName);
        printNameLength(name, lastName);
       console.close();
    }

    private static void printNameLength( String name, String lastName )
    {
       System.out.println("Tu nombre tiene " + name.length() + " carácteres");
       System.out.println("Tu apellido tiene " + lastName.length() + " carácteres");
        
    }

    private static void printNameCharacters( String name, String lastName )
    {
        System.out.println("Tu nombre es " + name);
        System.out.println("Tu apellido es " + lastName);
    }
	
}
